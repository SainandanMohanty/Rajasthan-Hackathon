<div class="container">
<h1>Sample Clinical Form for Hospitals</h1>
    <br>
<h3 id="balance"></h3>
    <br>
<section class="insert form-group">
    <form action="/insert" method="post">
         <div class="input">
            <label for="hospital">Name of the Hospital</label>
            <input class="form-control" type="text" id="hospital" name="hospital">
        </div>
        <div class="input">
            <label for="patient">Name of the Patient</label>
            <input class="form-control" type="text" id="patient" name="patient">
        </div>
        <div class="input">
            <label for="aadhar">Aadhar ID</label>
            <input class="form-control" type="text" id="aadhar" name="aadhar">
        </div>
        <div class="input">
            <label for="contact">Contact number</label>
            <input class="form-control" type="text" id="contact" name="contact">
        </div>
        
        <div class="form-group">
        <label for="complaint">Complaints:</label>
        <textarea class="form-control" rows="5" id="complaint" name="complaint"></textarea>
        </div>
        <div class="form-group">
        <label for="diagnosis">Diagnosis:</label>
        <textarea class="form-control" rows="5" id="diagnosis" name="diagnosis"></textarea>
        </div>
        
        
       <br> <button id="submit" type="submit" class="btn btn-success">Submit</button>
    </form>
</section>
</div>

<script src="/js/web3.min.js"></script>
<script src="/js/script.js"></script>